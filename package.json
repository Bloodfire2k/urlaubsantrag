{
  "name": "urlaubsantrag-mitarbeiter",
  "version": "1.0.0",
  "description": "Webanwendung für Mitarbeiter-Urlaubsanträge",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:frontend": "vitest --config vitest.config.ts",
    "test:backend": "vitest --config vitest.server.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc --project tsconfig.node.json",
    "build:client": "vite build",
    "preview": "vite preview",
    "server": "tsx src/server/index.ts",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "db:migrate": "npx prisma migrate dev",
    "db:import": "tsx scripts/import-json.ts",
    "db:seed": "npx tsx scripts/seed-db.ts",
    "db:demo": "npx tsx scripts/create-demo-data.ts",
    "db:studio": "npx prisma studio",
    "db:generate": "npx prisma generate",
    "server:prisma": "tsx src/server/index-prisma.ts",
    "start:prod": "tsx src/server/production.ts",
    "docker:build": "docker build -t urlaubsantrag .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "deploy": "npm run build && npm run docker:build"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.263.1",
    "pg": "^8.16.3",
    "prisma": "^6.14.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "daisyui": "^4.12.14",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4.1.11",
    "tsx": "^4.20.4",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vitest": "^3.2.4"
  }
}
